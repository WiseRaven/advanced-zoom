  },
  "homepage": "http://heavybeard.github.io/zoom-vanilla.js/dist/",
  "devDependencies": {
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "uglify-js": "^2.4.21"
  },
  "scripts": {
    "compress-js": "uglifyjs --mangle --preamble=\"// zoom-vanilla - 1.0.0 (http://heavybeard.github.io/zoom-vanilla.js/dist/)\" source/script/zoom-vanilla.js > dist/asset/js/zoom-vanilla.min.js",
    "compile-sass": "node-sass --output-style compressed --include-path scss source/style/zoom.scss dist/asset/css/zoom.min.css && node-sass --output-style compressed --include-path scss source/style/demo.scss dist/asset/css/demo.min.css",
    "watch-compile-sass": "nodemon -e scss --watch source/style -x \"npm run compile-sass\"",
    "watch-compress-js": "nodemon -e js --watch source/script -x \"npm run compress-js\"",
    "clean": "rm -rf dist/asset/js/* && rm -rf dist/asset/css/*",
    "watch": "npm run watch-compress-js && npm run watch-compile-sass",
    "build": "npm run clean && npm run compress-js && npm run compile-sass"
  }
}
