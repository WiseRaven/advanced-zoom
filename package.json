{
  "name": "zoom-vanilla.js",
  "version": "1.0.0",
  "description": "Best way to zoom an image or a video",
  "main": [
    "dist/asset/js/zoom-vanilla.min.js",
    "dist/asset/css/zoom-vanilla.min.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/heavybeard/zoom-vanilla.js.git"
  },
  "keywords": [
    "zoom",
    "vanilla",
    "vanilla-js",
    "image",
    "video"
  ],
